<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>all</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src</directory>
      <outputDirectory>src</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/site</directory>
      <outputDirectory>doc</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/*.log</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.scriptSourceDirectory}/TICSerialDump.bat</source>
      <destName>bin/TICSerialDump.bat</destName>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/TICSerialDump.sh</source>
      <destName>bin/TICSerialDump.sh</destName>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>LICENSE</source>
      <destName>LICENSE</destName>
    </file>
    <file>
      <source>pom.xml</source>
      <destName>pom.xml</destName>
    </file>
    <file>
      <source>README.md</source>
      <destName>README.md</destName>
    </file>
  </files>
</assembly>
