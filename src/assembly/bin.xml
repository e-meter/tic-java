<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
		                      http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <!-- Specifies that our binary distribution is a zip package -->
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>${project.build.scriptSourceDirectory}/TICSerialDump.bat</source>
      <destName>bin/TICSerialDump.bat</destName>
    </file>
    <file>
      <source>${project.build.scriptSourceDirectory}/TICSerialDump.sh</source>
      <destName>bin/TICSerialDump.sh</destName>
      <fileMode>0755</fileMode>
    </file>
    <file>
	  <source>LICENSE</source>
      <destName>LICENSE</destName>
    </file>
  </files>
</assembly>